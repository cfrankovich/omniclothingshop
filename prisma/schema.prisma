generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url = env("DATABASE_URL")
}

model User {
    id              Int     @id @default(autoincrement())
    email           String  @unique
    username        String  @unique
    hashedPassword  String  
}

// https://en.wikipedia.org/wiki/Web_storage for the login sessions 
model Session {
    id              String  @id @map("sid")
    expire          DateTime
    sess            Json
}

model Garment {
    id      Int     @id @default(autoincrement())
    title   String  @default("untitled")
    brand   String
    price   Decimal 
    color   String 
    size    String
    forSale Boolean
}